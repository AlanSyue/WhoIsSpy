{
  "name": "Who-Is-Spy-Web",
  "private": true,
  "scripts": {
    "dev": "nodemon index -i src",
    "start": "NODE_ENV=production node index",
    "start:pm2": "pm2 startOrReload config/process.config.js",
    "build": "next build src",
    "lint": "eslint .",
    "migrate:new": "db-migrate --sql-file --config config/index.js --migrations-dir migrations/pg -e pg create",
    "migrate:up": "db-migrate --config config/index.js --migrations-dir migrations/pg -e pg up",
    "migrate:down": "db-migrate --config config/index.js --migrations-dir migrations/pg -e pg down"
  },
  "dependencies": {
    "@rematch/core": "^0.6.0",
    "@rematch/loading": "^0.5.0",
    "bunyan": "^1.8.12",
    "joi": "^13.1.2",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "lodash": "^4.17.5",
    "next": "^5.0.0",
    "next-routes": "^1.3.0",
    "pg": "^7.4.1",
    "pg-native": "^2.2.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "sequelize": "^4.37.5",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.18.1",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.15.1"
  },
  "babel": {
    "presets": [
      "env",
      "next/babel"
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "src"
        }
      ],
      [
        "styled-components",
        {
          "ssr": true,
          "uglifyPure": false
        }
      ],
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "root": true
  }
}
